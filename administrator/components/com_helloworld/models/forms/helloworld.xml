<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="greeting"
				type="text"
				label="Name"
				description="Enter the employee name"
				size="40"
				class="inputbox"
				default=""
				/>

               <field
				name="age"
				type="text"
				label="Age"
				description="Enter the employee age"
				size="40"
				class="inputbox"
				default=""
				/>

              <field
				name="address"
				type="text"
				label="Address"
				description="Enter the employee address"
				size="40"
				class="inputbox"
				default=""
				/>

              <field            name="email" type="email"
	                        label="JGLOBAL_EMAIL"
	                        description="COM_ADMIN_USER_FIELD_EMAIL_DESC"
	                        required="true"
	                        size="30"
	                        class="inputbox"
	                        validate="email" />

           <field
                                name="gender"
                                type="radio"
                                default="0"
                                label="Gender"
                                description=""
                                class="btn-group">
                          <option value="M">Male</option>
                          <option value="F">Female</option>
               </field>



	</fieldset>
</form>
